<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="scene_obstacles">

  <!-- Scene Obstacles Macro -->
  <xacro:macro name="scene_obstacles" params="parent">

    <xacro:property name="floor_roll" value="1.5708" />
    <xacro:property name="floor_pitch" value="0.0" />
    <xacro:property name="floor_yaw" value="1.57" />
  <!-- adjust joint z to translate the floor in world coordinates if needed -->
  <xacro:property name="floor_z_offset" value="0.0" />
  <!-- visual offset: use this to shift the mesh relative to the floor link frame (to center it) -->
  <xacro:property name="floor_visual_xyz" value="-0.5 0 0" />

    <!-- Materials for obstacles  qui vado a inizializzare ostacoli con colori -->
    <material name="table_color">
<color rgba="0.2 0.2 0.2 1.0"/>
    </material>
    
    <material name="wall_color">
      <color rgba="0.7 0.7 0.7 0.4"/>  
    </material>
    
    <material name="red_color">
      <color rgba="1.0 0.0 0.0 0.5"/> 
    </material>
    
    <material name="green_color">
      <color rgba="0.0 1.0 0.0 0.5"/>  
    </material>
    
    <material name="blue_color">
      <color rgba="0.0 0.0 1.0 0.5"/>  
    </material>

    <material name="floor_color">
      <color rgba="0.6 0.6 0.6 0.3"/>  
    </material>


  <!-- Frigorifero obstacle -->
  <link name="frigorifero">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 3.14"/>
      <geometry>
        <mesh filename="file://$(find iiwa_description)/meshes/obstacles/Frigorifero.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="table_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 3.14"/>
      <geometry>
        <mesh filename="file://$(find iiwa_description)/meshes/obstacles/Frigorifero.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 3.14"/>
      <mass value="30.0"/>
      <inertia ixx="5.0" ixy="0.0" ixz="0.0" iyy="5.0" iyz="0.0" izz="5.0"/>
    </inertial>
  </link>

  <joint name="world_to_frigorifero" type="fixed">
    <parent link="${parent}"/>
    <child link="frigorifero"/>
    <origin xyz="1.87 2.62 0.0" rpy="0 0 0"/>
  </joint>
