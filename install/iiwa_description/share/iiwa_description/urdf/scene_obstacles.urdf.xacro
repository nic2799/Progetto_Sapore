    <!-- Floor -->
    <link name="floor">
      <visual>
        <origin xyz="0.0 0.0 0" rpy="${floor_roll} ${floor_pitch} ${floor_yaw}"/>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/obstacles/Pavimento1.stl" scale ="0.001 0.001 0.001"/>
        </geometry>
        <material name="floor_color"/>  <!-- Usa il materiale definito sopra -->
      </visual>
      <collision>
        <origin xyz="1.0 0.5 0" rpy="${floor_roll} ${floor_pitch} ${floor_yaw}"/>
        <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/obstacles/Pavimento1.stl" scale ="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="1.0 0.5 0" rpy="${floor_roll} ${floor_pitch} ${floor_yaw}"/>
        <mass value="100.0"/>
        <inertia ixx="75.0" ixy="0.0" ixz="0.0" iyy="75.0" iyz="0.0" izz="150.0"/>
      </inertial>
    </link>

    <joint name="world_to_floor" type="fixed">
