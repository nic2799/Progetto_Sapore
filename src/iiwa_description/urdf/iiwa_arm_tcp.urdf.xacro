<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="iiwa_arm_tcp" params="parent prefix *origin">
<xacro:include filename="$(find iiwa_description)/urdf/iiwa_arm.urdf.xacro" />
    <xacro:iiwa_arm parent="${parent}" prefix="${prefix}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:iiwa_arm>

<!--Ora dobbiamo aggiungere il tcp-->
 <link name="${prefix}hand">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0.0"/>
      <geometry>
        <!-- SCHUNK end-effector mesh (file present in meshes/) -->
          <mesh filename="file://$(find iiwa_description)/meshes/schunk.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0.0"/>
      <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/schunk.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0.0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>

  <joint name="${prefix}tool0_to_hand" type="fixed">
    <origin rpy="0 0 0" xyz="0 0.0 0.06"/>
    <parent link="${prefix}tool0"/>
    <child link="${prefix}hand"/>
  </joint>






<link name="${prefix}finger_left">
     <material name="gray"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
    <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/finger.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/finger.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
   
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="${prefix}finger_right">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
    <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/finger.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
           <material name="gray"/>

    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/finger.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
   
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
    
  <joint name="${prefix}hand_to_finger_left" type="prismatic">
    <origin xyz="0.017 0.064 0.10" rpy="0 0 0"/>
    <parent link="${prefix}hand"/>
    <child link="${prefix}finger_left"/>
      <axis xyz="0 -1 0" />
        <limit effort="20" lower="0.02" upper="0.00" velocity="0.2" />

  </joint>

  <joint name="${prefix}hand_to_finger_right" type="prismatic">
    <origin xyz="0.016 -0.042 0.10" rpy="0 0 0"/>
    <parent link="${prefix}hand"/>
    <child link="${prefix}finger_right"/>
      <axis xyz="0 1 0" />
        <limit effort="20" lower="0.0" upper="0.02" velocity="0.2" />

  </joint>

  <link name="${prefix}tcp">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      
      <material name="blue"/>
    </visual>
   
   </link>
   <joint name="${prefix}hand_to_tcp" type="fixed">
    <origin rpy="0 0 0" xyz="0 0.0 0.12"/>
    <parent link="${prefix}hand"/>
    <child link="${prefix}tcp"/>
  </joint>





</xacro:macro>
</robot>


