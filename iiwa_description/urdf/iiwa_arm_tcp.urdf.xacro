<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="iiwa_arm_tcp" params="parent prefix *origin">
<xacro:include filename="$(find iiwa_description)/urdf/iiwa_arm.urdf.xacro" />
    <xacro:iiwa_arm parent="${parent}" prefix="${prefix}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:iiwa_arm>

<!--Ora dobbiamo aggiungere il tcp-->
 <link name="${prefix}tcp">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- SCHUNK end-effector mesh (file present in meshes/) -->
          <mesh filename="file://$(find iiwa_description)/meshes/schunk.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
          <mesh filename="file://$(find iiwa_description)/meshes/schunk.stl" scale ="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>

  <joint name="${prefix}tool0_to_tcp" type="fixed">
    <origin rpy="1.57 0 0" xyz="0 -0.05 0"/>
    <parent link="${prefix}tool0"/>
    <child link="${prefix}tcp"/>
  </joint>






 <link name="${prefix}finger_left">
    <visual>
      <!-- finger is a thin rectangular box; tune size as needed -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.08 0.02"/> <!-- x(width) y(thickness) z(length) -->
      </geometry>

        <color rgba="1 0.58 0.66 1"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.08 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="${prefix}finger_right">
     <material name="gray"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.08 0.02"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.08 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
    
  <joint name="${prefix}tcp_to_finger_left" type="prismatic">
    <origin xyz="0.01 0.12 -0.1" rpy="0 0 0"/>
    <parent link="${prefix}tcp"/>
    <child link="${prefix}finger_left"/>
      <axis xyz="0 0 -1" />
        <limit effort="20" lower="0.0" upper="0.04" velocity="0.2" />

  </joint>

  <joint name="${prefix}tcp_to_finger_right" type="prismatic">
    <origin xyz="0.01 0.12 0.0" rpy="0 0 0"/>
    <parent link="${prefix}tcp"/>
    <child link="${prefix}finger_right"/>
      <axis xyz="0 0 -1" />
        <limit effort="20" lower="0.0" upper="0.04" velocity="0.2" />

  </joint>





</xacro:macro>
</robot>


